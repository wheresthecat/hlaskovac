<Window x:Class="Hlaskovac.AddQuote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hlaskovac"
        mc:Ignorable="d"
        Title="AddQuote" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Label Content="Title:" Margin="5"/>
            <TextBox Name="textBoxNewQuoteTitle" Margin="5"/>

            <Label Content="Quote:"/>
            <TextBox Name="textBoxNewQuote"/>

            <Label Content="Author"/>
            <TextBox Name="textBoxNewQuoteAuthor"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="buttonSaveQuote" Width="64" Height="32" Margin="5" Click="buttonSaveQuote_Click" >Save</Button>
            <Button Name="buttonCancelQuote" Width="64" Height="32" Margin="5" Click="buttonCancelQuote_Click" >Cancel</Button>
        </StackPanel>



    </Grid>
</Window>
